<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.ListViewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/list_item_horizontal_space"
        android:layout_marginEnd="@dimen/list_item_horizontal_space"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_launcher" />
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_icon"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toLeftOf="@id/checkbox"
        android:layout_toStartOf="@id/checkbox"
        android:layout_alignTop="@id/app_icon"
        android:layout_marginTop="@dimen/list_item_vertial_space"
        tools:text="Test app name" />
    <TextView
        android:id="@+id/pkg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_icon"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toLeftOf="@id/checkbox"
        android:layout_toStartOf="@id/checkbox"
        android:layout_below="@id/app_name"
        tools:text="pkgname.test.com"/>

</RelativeLayout>